{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"types": ["mocha", "chai", "node", "ethers", "hardhat"],
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"rootDirs": ["./src", "./scripts", "./test"]
	},
	"include": [
		"test/**/*.ts",
		"scripts/**/*.ts",
		"src/**/*.ts",
		"test/nft.test.js",
		"test/manage.test.js",
		"./src",
		"./scripts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"./hardhat.config.ts" // Esclude il file se non necessario
	]
}
